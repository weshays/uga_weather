<h1>Readings for <%= @report[:data_type] %></h1>

<form action="/dashboard" method="get">
  <h3>
    Range
    <input name="start_date" value="<%= @report[:start_date] %>" />
    to
    <input name="end_date" value="<%= @report[:end_date] %>" />
    <input type="hidden" name="data_type" value="<%= @report[:data_type] %>" />
    <input type="submit" />
  </h3>
</form>

<hr>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<%= javascript_tag "weatherData(#{@report.to_json})" %>
